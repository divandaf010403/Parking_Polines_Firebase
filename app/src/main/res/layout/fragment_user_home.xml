<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHomeFragment">

    <TextView
        android:id="@+id/judulBrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/nama_kmps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulBrd"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Politeknik Negeri Semarang"
        android:textColor="@color/dark_blue"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deskHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_kmps"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:text="@string/desc"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imglgn"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/deskHome"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foto2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/open_cam"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Scan Barcode"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageButton
        android:id="@+id/open_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/purple_500"
        android:padding="15dp"
        android:src="@drawable/ic_open_camera"
        tools:ignore="UnknownId" />

</RelativeLayout>